---
import "@/styles/style.css";
import Link from "@/components/Link.astro";

// Get all character pages
const pageModules = import.meta.glob("./characters/*.astro", { eager: true });
const characterPages = Object.keys(pageModules)
  .map((path) => {
    const name = path.replace("./characters/", "").replace(".astro", "");
    return { name, to: `/characters/${name}` };
  })
  .sort((a, b) => a.name.localeCompare(b.name));

const pageTitle = "D&D Character Sheets";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{import.meta.env.DEV ? "[dev] " : ""}{pageTitle}</title>
  </head>
  <body>
    <div style="display: flex; justify-content: center; align-items: center; min-height: 100vh;">
      <div style="width: 300px;">
        <table>
          <tr>
            <th>Characters</th>
          </tr>
          {
            characterPages.map(({ name, to }) => (
              <tr>
                <td>
                  <Link to={to}>{name}</Link>
                </td>
              </tr>
            ))
          }
        </table>
        <table>
          <tr>
            <th>Critical Role</th>
          </tr>
          <tr>
            <td>
              <Link to="/critical-role">Critical Role Characters</Link>
            </td>
          </tr>
        </table>
        <table>
          <tr>
            <th>Classes</th>
          </tr>
          <tr>
            <td>
              <Link to="/classes">All Classes</Link>
            </td>
          </tr>
        </table>
      </div>
    </div>
  </body>
</html>
