---
import SpellSlotsTable from "./spells/SpellSlotsTable.tsx";
import WarlockSpellSlotsTable from "./spells/WarlockSpellSlotsTable.tsx";
import type { Character } from "@/js/character/Character.ts";

interface Props {
  character: Character;
}

const { character } = Astro.props;

const spellSlots = character.getSpellSlots();
const warlockSpellSlots = character.getWarlockSpellSlots();
---

<SpellSlotsTable client:load spellSlots={spellSlots} />
<WarlockSpellSlotsTable client:load warlockSpellSlots={warlockSpellSlots} />
