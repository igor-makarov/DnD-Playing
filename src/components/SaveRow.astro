---
import CheckCell from "./CheckCell.tsx";
import type { Ability, SavingThrow } from "../js/CharacterTypes";
import type { D20Test } from "../js/D20Test";

interface Props {
  savingThrow: SavingThrow;
  advantage?: boolean;
}

const { savingThrow, advantage } = Astro.props;
const check = savingThrow.check;
---

<tr>
  <td><span class="mono">[{check.getProficiency().symbol}]</span> {check.getAbility()}</td>
  <td class="checkCell">
    <CheckCell client:only="react" check={check} advantage={advantage} />
  </td>
</tr>
