---
import SkillRow from "./SkillRow.astro";

const { title, skills, advantage, character } = Astro.props;
const finalSkills = skills ?? character.getSkills();
---

<table>
  <tr>
    <th colspan="2" style="text-align: center;" set:html={title} />
  </tr>
  <tr>
    <th>Skill</th>
    <th class="modifier">Modifier</th>
  </tr>
  {
    finalSkills.map(({ skill, ability, proficiency, dice }) => {
      const bonus = dice.modifier;
      return <SkillRow skill={skill} ability={ability} proficiency={proficiency} bonus={bonus} advantage={advantage} />;
    })
  }
</table>
