---
import type { Skill } from "../js/Character";
import SkillRow from "./SkillRow.astro";

const { title, skills, advantage, character, proficiencyMultiplier } = Astro.props;
const skillsList = skills ?? character.skills;
---

<table>
  <tr>
    <th colspan="2" style="text-align: center;" set:html={title} />
  </tr>
  <tr>
    <th>Skill</th>
    <th class="modifier">Modifier</th>
  </tr>
  {
    skillsList.map((skill: Skill) => {
      const proficiency = character.createProficiency(skill.proficient, proficiencyMultiplier);
      const bonus = character.abilityModifier(skill.modifier) + proficiency.bonus;
      return <SkillRow skill={skill} proficiency={proficiency} bonus={bonus} advantage={advantage} />;
    })
  }
</table>
