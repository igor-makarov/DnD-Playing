---
import "../../public/styles/style.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}{import.meta.env.DEV ? " [dev]" : ""}</title>
  </head>
  <body>
    <div class="info-tooltip-dialog" style="margin: 0 auto;">
      <slot />
    </div>
  </body>
</html>
