---
interface Props {
  frontmatter?: {
    title: string;
  };
}

const { frontmatter } = Astro.props;
const pageTitle = frontmatter?.title ?? "Reference";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="../styles/style.css" />
    <title>{import.meta.env.DEV ? "[dev] " : ""}{pageTitle}</title>
  </head>
  <body>
    <div class="info-tooltip-dialog" style="margin: 0 auto;">
      <slot />
    </div>
  </body>
</html>
